<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
    <settings>
        <setting name="mapUnderscoreToCamelCase" value="true"/>
    </settings>

    <typeAliases>
        <typeAlias type="kr.ac.kopo.vo.Product" alias="Product"/>
        <typeAlias type="kr.ac.kopo.vo.Domain" alias="Domain"/>
        <typeAlias type="kr.ac.kopo.vo.Keywords" alias="Keywords"/>
        <typeAlias type="kr.ac.kopo.vo.Detail" alias="Detail"/>
    </typeAliases>

    <mappers>
        <mapper resource="mybatis/product.xml"/>
        <mapper resource="mybatis/domain.xml"/>
        <mapper resource="mybatis/keywords.xml"/>
        <mapper resource="mybatis/detail.xml"/>
    </mappers>

</configuration>