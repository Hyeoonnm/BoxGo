<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="domain">
    <!--<sql id="search">
        SELECT * FROM domain
        <where>
            <if test="search == 1">

            </if>
        </where>
    </sql>-->

    <select id="total" resultType="Integer">
        SELECT COUNT(*)
        FROM domain
    </select>

    <select id="list" resultType="Domain">
        SELECT *
        FROM domain
        <!--<where>
            <if test="search == 1"> id LIKE CONCAT(CONCAT('%', #{keyword}), '%') </if>
            <if test="search == 2"> name LIKE CONCAT(CONCAT('%', #{keyword}), '%')</if>
        </where>-->
        LIMIT #{offset}, #{perPage}
    </select>


    <insert id="add">
        INSERT INTO domain(domain_name)
        VALUES (#{domainName})
    </insert>

    <delete id="delete">
        DELETE
        FROM domain
        WHERE domain_id = #{domainId}
    </delete>

    <update id="update">
        UPDATE domain
        SET domain_name = #{domainName}
        WHERE domain_id = #{domainId}
    </update>

    <select id="item" resultType="Domain">
        SELECT *
        FROM domain
        WHERE domain_id = #{domainId}
    </select>
</mapper>